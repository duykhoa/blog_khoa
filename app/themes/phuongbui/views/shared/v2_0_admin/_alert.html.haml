- if flash.key?("success") && flash.key?("action")
  - if flash["success"] == true
    .alert.alert-success
      %button.close(data-dismiss="alert" aria-hidden='true')×
      Successfully
      %strong= flash["action"]

  - if flash["success"] == false
    .alert.alert-danger
      %button.close(data-dismiss="alert" aria-hidden='true')×
      Successfully
      %strong= flash["action"]
