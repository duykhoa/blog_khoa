= simple_form_for [:v2_admin, @article], html: { class: "article-new-or-edit" } do |f|
  .row
    .col-lg-8
      = f.input :title, label: false, input_html: { placeholder: "Your Post title here", class: "form-control" , data: { validate: 'required' } }
      = f.input :content, label: false, input_html: { class: "form-control input-lg mb-md" }
    .col-lg-4
      = f.association :category, label: false, prompt: "Choose a category", input_html: { class: 'form-control', data: { validate: 'required' } }
      %span.btn.btn-default.btn-file
        - if f.object.persisted?
          = image_tag f.object.feature_image.url, class: 'img-rounded img-responsive'
        = f.input :feature_image
      .row
        .col-lg-12
          = f.input :short_content, label: false, input_html: { placeholder: "Exerpt", class: 'form-control' }

      .row
        .col-lg-12
          %section.panel.section-publishing
            %header.panel-heading
              %h2.panel-title Publishing
            .panel-body
              .row
                #hidden-commit-field
                  = f.input :commit, as: :hidden
                .col-lg-6.text-center
                  = f.submit "Publish", class: 'btn article-submit-button'
                .col-lg-6.text-center
                  = f.submit "Save Draft", class: 'btn btn-default btn-custom-default'
                -#.col-lg-4
                  -#= f.button :preview, class: 'btn btn-success'
