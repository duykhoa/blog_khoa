= simple_form_for @article do |f|
  .col-lg-8
    = f.input :title, label: false, input_html: { placeholder: "Your Post title here", class: "form-control" }
    = f.input :content, label: false, input_html: { class: "form-control input-lg mb-md" }
  .col-lg-4
    = f.association :category, label: false, prompt: "Choose a category", input_html: { class: 'form-control mb-md' }
    %span.btn.btn-default.btn-file
      = f.input :feature_image
