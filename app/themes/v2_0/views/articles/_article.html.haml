.article-container
  .title
    %h2= link_to article.title, article_path(article.slug)
  .feature-image
    = image_tag article.feature_image
  .post-time
    %h4= format_date(article.created_at)
  .content
    %h5= article.short_content
  .read-more
    = link_to article_path(article.slug) do
      %h6
        Continue Reading
        = fa_icon "angle-double-right"
