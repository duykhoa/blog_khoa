.article-container
  .title
    = link_to article.title, article_path(article.slug)
  .feature-image
    = image_tag article.feature_image
  .post-time
    = format_date(article.created_at)
  .content
    = article.short_content
  .read-more
    = link_to article_path(article.slug) do
      %span Continue Reading
      %span= fa_icon "angle-double-right"
